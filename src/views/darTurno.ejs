<%- include ('vistas') %>
<body>
<h1 align="center">Nuevo Turno</h1>
<div>
  <form class="registro" action="/nuevot" method="POST" onsubmit="return validarFecha()">
    <label for="cliente" class="form-control">Cliente:</label>
    <input type="text" id="cliente" name="cliente" required><br><br>
  
    <label for="descripcion" class="form-control">Descripción:</label>
    <textarea id="descripcion" name="descripcion" required></textarea><br><br>
  
    <label for="tipo" class="form-control">Servicio:</label>
    <select id="tipo" name="tipo">
      <option value="Vacunacion" selected>Vacunación</option>
      <option value="Castracion">Castración</option>
      <option value="Desparacitacion">Desparasitación</option>
    </select><br><br>
  
    <label for="dia" class="form-control">Día: Debe ser una fecha válida</label>
    <input type="date" id="dia" name="dia" required><br><br>
  
    <label for="hora" class="form-control">Hora:</label>
    <input type="time" id="hora" name="hora" required><br><br>
  
    <button type="submit" class="btn btn-info-orange">Confirmar</button>
    <a href="/" class="btn btn-info-orange">Cancelar</a>
  </form>
  
  <script>
    function validarFecha() {
      var fechaInput = document.getElementById("dia").value;
      var fechaActual = new Date().toISOString().split("T")[0];
  
      if (fechaInput <= fechaActual) {
        alert("La fecha ingresada no es válida. Debe ser mayor a la fecha actual.");
        return false; // Evita que el formulario se envíe
      }
  
      return true; // Permite que el formulario se envíe
    }
  </script>
  

</div>
</body>
</html>
