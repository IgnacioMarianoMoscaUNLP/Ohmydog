<%- include ('vistas') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <h1 class="text-center">Agregar perro perdido.</h1>
  


  <form action="/agregarPerroPerdido" class=" registro" method="post" enctype="multipart/form-data">
    <input id="mail" name="emailpublicacion" type="hidden" value="<%= user[0].email %>">
    <input type="radio" id="encontrado" name="perdidooencontrado" value="0" required>
    <label for="encontrado">Encontre un perro</label><br>
    <input type="radio" id="perdido" name="perdidooencontrado" value="1" required>
    <label for="perdido">Perdi a mi perro</label><br>
    <div class="form-group"><label for="nombre">Nombre :</label><br>
      <input type="text" class="form-control" id="nombre" name="nombre">
    </div>
    <input type="radio" id="macho" name="sexo" value="Macho" required>
    <label for="encontrado">Macho</label><br>
    <input type="radio" id="hembra" name="sexo" value="Hembra" required>
    <label for="perdido">Hembra</label><br>
    <div class="form-group"><label for="zona" maxlength="700" size="700">Zona:</label><br>
      <textarea class="form-control" required rows="3" type="text" id="zona" name="zona"></textarea>
    </div>
    <label for="fecha">Fecha de perdido/encontrado:</label>
    <input type="date" id="fecha" name="fecha">
   <div class="form-group"><label for="descripcion">Descripcion:</label><br>
      <textarea class="form-control" type="text" maxlength="700" size="700" id="descripcion"
        name="descripcion"></textarea>
    </div>
    <div class="form-group">
      <input type="file" class="form-control" name="imagen"required>
  </div>
    <div class="form-group">
      <input type="text" class="form-control" name="contacto" placeholder="Ingrese su telofono para contactarse"required>
  </div>
      <input type="submit" value="Agregar" class="btn btn-info-orange">
  </form>
  <%- include ('partials/_footer') %>