<%- include ('vistas') %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .perfil-card {
      max-width: 400px;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .perfil-card h2 {
      margin-top: 0;
      color: #333;
    }

    .perfil-card p {
      margin-bottom: 10px;
      color: #777;
    }

    .perfil-card .label {
      font-weight: bold;
      color: #333;
    }
    .mi-boton {
        background-color: white;
        border: 1px solid black;
        color: black;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
    }


  </style>
</head>
<body>
  <% if (rows) { %>
    <div class="perfil-card">
      <h2>Perfil de Cliente</h2>
      <p><span class="label">Nombre:</span> <%= rows[0].nombre %></p>
      <p><span class="label">Email:</span> <%= rows[0].email %></p>
      <p><span class="label">Telefono:</span> <%= rows[0].telefono %></p>
    </div>
  <% } else { %>
    <p>No se encontró información de perfil.</p>
  <% } %>
  <% if (mascotas) { %>
    <div class="perfil-card">
      <h2>Perros Cliente</h2>
      
      <% for (i=0;i<mascotas.length;i++){%>
        <p ><span class="label"><%= mascotas[i].nombre %> </span>  <button class="mi-boton">Ver Informacion</button></p> 
        <%}%> 
      
    </div>
  <% }%>

</body>
</html>
<%- include ('partials/_footer') %>